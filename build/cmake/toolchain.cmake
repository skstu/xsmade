set(xsSYSTEM_NAME "Unknown System")
set(xsSYSTYPE_WINDOWS OFF)
set(xsSYSTYPE_LINUX OFF)
set(xsSYSTYPE_APPLE OFF)
if(WIN32)
  set(xsSYSTYPE_WINDOWS ON)
  set(xsSYSTEM_NAME "Windows")
  add_definitions(-DUNICODE -D_UNICODE)
  set(xsMSYS2_DIR "c:/msys64")
  set(MSYS2_CLANG64_DIR ${xsMSYS2_DIR}/clang64)
  set(MSYS2_MINGW64_DIR ${xsMSYS2_DIR}/mingw64)
  set(MSYS2_MINGW32_DIR ${xsMSYS2_DIR}/mingw32)
  set(CMAKE_C_COMPILER ${MSYS2_CLANG64_DIR}/bin/clang.exe)
  set(CMAKE_CXX_COMPILER ${MSYS2_CLANG64_DIR}/bin/clang++.exe)
elseif(APPLE)
  set(xsSYSTYPE_APPLE ON)
  set(xsSYSTEM_NAME "macOS")
  enable_language(OBJC)
  set(CMAKE_C_COMPILER /usr/bin/clang)
  set(CMAKE_CXX_COMPILER /usr/bin/clang++)
elseif(UNIX)
  set(xsSYSTYPE_LINUX ON)
  set(xsSYSTEM_NAME "Linux")
  set(CMAKE_C_COMPILER /usr/bin/clang)
  set(CMAKE_CXX_COMPILER /usr/bin/clang++)
else()
  message(FATAL_ERROR "Unknown System")
endif()

if("${CMAKE_SYSTEM_NAME}" STREQUAL "")
  set(CMAKE_SYSTEM_NAME ${xsSYSTEM_NAME})
endif()

